            <div element="ID_DRS_SILVERPLATE_RACIAL_TRAIT_BAKEDROASTED_ALWAYS_HOT" />
        </description>
        <sheet display="false">
            <description></description>
        </sheet>
        <rules>
            <grant type="Racial Trait" id="ID_DRS_SILVERPLATE_RACIAL_TRAIT_FOOD_SOLID_STRUCTURE" level="1" />
            <grant type="Racial Trait" id="ID_DRS_SILVERPLATE_RACIAL_TRAIT_SAVORY_DOUBLE_DECKER" level="1" />
